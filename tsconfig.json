{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["ES2021", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules","build"]
}
